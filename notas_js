//Funcion Externa
const nombreA = "Ramon";
const nombreB = "Adrian";

function saludarA(e) {
    this.e = e;
    alert(`Hola mi nombre es ${e}`);
}

function saludarB() {
    alert(`Hola mi nombre es ${nombreB}`);
}
//Asignacion de Funcion al elemento HTML

////usar este metodo sí SI es necesario meter parametros
//document.getElementById("boton").onclick = ()=>saludarA(nombreA);
