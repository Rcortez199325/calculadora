////usar este metodo sí NO es necesario meter parametros
//document.getElementById("inputButton").onclick = saludarB;


////Con querySelector solo funciona la tecnica del callback
//_inputButton.onclick = ()=>saludarA(nombreA);
//
//_boton.onclick = ()=> saludarB();

//Desde una constante obtenida del Id
__inputButton.onclick = ()=> saludarA(nombreA);
__inputButton.onmouseover =()=> __inputButton.style.backgroundColor= "#eebbcc";
__inputButton.onmouseout =()=> __inputButton.style.backgroundColor= "#cc88dd";

__boton.onclick = ()=> saludarB();

__boton.onmouseover =()=> __boton.style.backgroundColor= "#eebbcc";
__boton.onmouseout =()=> __boton.style.backgroundColor= "#cc88dd";

